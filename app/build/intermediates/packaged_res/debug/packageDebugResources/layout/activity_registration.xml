<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".registration">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginStart="@dimen/_200sdp"
        android:layout_marginTop="-30sp"
        app:srcCompat="@drawable/leaftomato" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:fontFamily="@font/amiko"
        android:text="Register"
        android:textColor="#3A9679"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/youraccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:fontFamily="@font/amiko"
        android:text="Create your new account"
        android:textAlignment="center"
        android:textColor="#b4bda2"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/youraccount"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />
    <EditText
        android:id="@+id/useremail"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:textSize="@dimen/_14sdp"
        />
    <EditText
        android:id="@+id/userpassword"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:layout_below="@id/useremail"
        android:textSize="@dimen/_14sdp"  />
    <CheckBox
        android:id="@+id/showlogin"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userpassword"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/amiko"
        android:text="Show Password"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userpassword"
        app:layout_constraintVertical_bias="0.0" />
    <EditText
        android:id="@+id/userno"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showlogin"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="-10sp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_smartphone_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Phone no"
        android:inputType="phone"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useremail" />
    <Button
        android:id="@+id/btnregister"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/select_bg"
        android:fontFamily="@font/amiko"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_below="@+id/userno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userno" />
    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:fontFamily="@font/amiko"
        android:text="Already have Account?"
        android:textAlignment="center"
        android:textColor="#b4bda2"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:layout_below="@id/btnregister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnregister" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_200sdp"
        app:srcCompat="@drawable/leaftomatos"
        android:layout_below="@+id/already"/>

</RelativeLayout>