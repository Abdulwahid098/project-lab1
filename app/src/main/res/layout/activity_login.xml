<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-90sp"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-25sp"
        android:layout_marginEnd="@dimen/_73sdp"
        android:fontFamily="@font/amiko"
        android:text="Welcome back"
        android:textAlignment="center"
        android:textColor=" #3A9679"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/youraccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="05sp"
        android:layout_marginEnd="@dimen/_100sdp"
        android:fontFamily="@font/amiko"
        android:text="Login your account"
        android:textAlignment="center"
        android:textColor="#b4bda2"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/useremail"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/youraccount"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:textSize="@dimen/_14sdp" />
    <EditText
        android:id="@+id/userpassword"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:fontFamily="@font/amiko"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor=" #1A1A1A"
        android:textColorHint="#8da297"
        android:layout_below="@id/useremail"
        android:textSize="@dimen/_14sdp" />
    <TextView
        android:id="@+id/forgot"
        android:layout_width="@dimen/_272sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpassword"
        android:layout_marginStart="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:fontFamily="@font/amiko"
        android:text="Forgot Password?"
        android:textColor="#b4bda2"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/showlogin"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/amiko"
        android:text="Show Password"
        android:textColor="#1A1A1A"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userpassword"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/ulogin"
        android:layout_width="@dimen/_355sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@drawable/select_bg"
        android:fontFamily="@font/amiko"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:layout_below="@+id/showlogin"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/newlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="12sp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:fontFamily="@font/amiko"
        android:text="Create a new Account?"
        android:textAlignment="center"
        android:textColor="#b4bda2"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:layout_below="@id/ulogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ulogin" />
</RelativeLayout>